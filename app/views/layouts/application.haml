!!! XML
!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title& pbcore || #{yield(:title)}
    = stylesheet_bundle 'application'
    = javascript_dev ['jquery-1.4.1.min', 'https://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js'], ['jquery-ui-1.7.2.min', 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js']
    = javascript_bundle 'common'
    = opensearch_headers(@search_object)
    = alternate_views
  %body
    %table.holder{ :cellspacing => "0", :border => "0", :width => "100%", :cellpadding => "0" }
      %tr
        %td{ :align => "center" }
          %table#header.header{ :cellspacing => "3", :border => "0", :width => "100%", :cellpadding => "3" }
            %tr
              %td &nbsp;
          %table#body{ :cellspacing => "0", :border => "0", :cellpadding => "0" }
            %tr
              %td{ :colspan => "2" }
                %table{ :cellspacing => "0", :border => "0", :cellpadding => "0" }
                  %tr
                    %td.topnavBar{ :align => "left" }
                      = render :partial => 'layouts/top_nav'
                    %td.topnavuserBar
                      = render :partial => 'users/user_bar'
            %tr
              %td.sidebarTop{ :align => "left" }
                %h1 Search
              %td.contentTop
                %table.contentTopLinksArea{ :cellspacing => "0", :border => "0", :width => "93%", :cellpadding => "0" }
                  %tr
                    %td{ :nowrap => "nowrap", :align => "left", :valign => "top" }
                      %h1&= yield(:title)
                    %td{ :align => "right", :valign => "middle" }
                      = link_to("All Assets", set_streamable_path("off"), :id => "all_asset_link", :class => session[:streamable] ? nil : "selected_option")
                      = link_to("Streamable Assets", set_streamable_path("on"), :id => "streamable_asset_link", :class => session[:streamable] ? "selected_option" : nil)
            -#
              %tr
              %td.sidebarSearch{ :align => "center" }
                %table{ :cellspacing => "0", :border => "0", :bgcolor => "#FFFFFF", :width => "170", :cellpadding => "0" }
                  %tr
                    %td{ :align => "right", :valign => "top", :width => "15" }
                      %input#search2{ :name => "search2", :size => "17", :type => "text" }
                    %td{ :align => "center", :width => "35" }
                      %img{ :src => "/images/buttons/btnSearch.jpg", :height => "22", :alt => "search", :width => "24" }
              %td.contentMiddle
                %table.pagination{ :cellspacing => "0", :border => "0", :bgcolor => "#FFFFFF", :width => "91%", :cellpadding => "0" }
