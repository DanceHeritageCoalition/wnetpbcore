              %td.sidebarBottom &nbsp;
              %td.contentBottom &nbsp;
          %table#footer.footer{ :cellspacing => "3", :border => "0", :cellpadding => "3" }
            %tr
              %td
                = link_to 'About this site', {:controller => 'static', :action => 'about'}, :class => "footerLink"
