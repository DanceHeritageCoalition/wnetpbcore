<li <%= !obj.id.nil? ? "id=\"edit_#{obj.id}\" style=\"display: none;\"" : "id='new_form'" %>>
<% remote_form_for(obj) do |f| %>
<%= f.text_field :name %>
&nbsp;&nbsp;
<span style="white-space: nowrap;">Validation regex: <%= f.text_field :regex %></span>
&nbsp;&nbsp;
<span style="white-space: nowrap;"><%= f.check_box :visible %>Show in edit form</span>
&nbsp;&nbsp;
<span style="white-space: nowrap;"><%= f.check_box :show_in_index %>Show in index view</span>
&nbsp;&nbsp;
<span style="white-space: nowrap;"><%= f.check_box :auto_merge %>Auto-merge</span>
&nbsp;&nbsp;
<span style="white-space: nowrap;"><%= f.submit(obj.id ? "Save changes" : "Add new") %></span>
<%=
if obj.id
  link_to_function "cancel", "$('#obj_#{obj.id}').show(); $('#edit_#{obj.id}').hide();"
end
%>
<% end %>
</li>