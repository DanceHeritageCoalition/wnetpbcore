<h2>Identifier Sources</h2>
<p>
  <%= link_to 'Create new Identifier Source', new_identifier_source_path %>
</p>
<%= will_paginate @identifier_sources %>
<table class="pbcore-admin">
  <tr>
    <th>Source</th>
    <th>Visible</th>
    <th></th>
    <th></th>
  </tr>
  <% @identifier_sources.each do |identifier_source| -%>
    <tr class="<%= cycle("odd", "even") -%><%= " visible" if identifier_source.visible %>">
      <td><%= identifier_source.name %></td>                                      
      <td class="visibility"><%= yes_or_no(identifier_source.visible) %></td>
      <td>
        <%= link_to 'Edit', edit_identifier_source_path(identifier_source) %>
      </td>
      <td>
        <%= link_to('Destroy', identifier_source, :method => "delete", :confirm => "Are you sure?") if identifier_source.safe_to_delete? %>
      </td>
    </tr>
  <% end -%>
</table>
<%= will_paginate @identifier_sources %>