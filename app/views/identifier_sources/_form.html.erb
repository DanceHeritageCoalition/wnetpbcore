<% semantic_form_for @identifier_source do |form| %>
  <% form.inputs do %>
    <%= form.input :name, :as => :string, :label => "Source" %>
    <%= form.input :ref, :as => :string %>
    <%= form.input :visible %>
  <% end%>
  <% form.buttons do %> 
    <%= form.commit_button %>
    <%= link_to 'Cancel', :back %>
  <% end %>
<% end %>