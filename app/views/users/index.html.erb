<%- title "User List" -%>
<ul>
  <%- @users.each do |user| -%>
    <li id="user_<%=user.id%>">
      <%= h user.to_s %>
      <%= link_to "edit", edit_user_url(user) if authorized?('edit', user) %>
      <%= link_to_remote "destroy", :url => { :action => 'destroy', :id => user.id }, :method => :delete, :confirm => "Are you sure you wish to delete #{user.login}?", :html => { :class => "destroy_link" } if authorized?('destroy', user)%>
    </li>
  <%- end -%>
</ul>

<p>
  <%= link_to "Create new user", :action => 'new' %>
</p>