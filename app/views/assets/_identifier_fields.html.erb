<% f.inputs do %>
  <%= f.input :identifier, :wrapper_html => { :class => "col-1" } %>
  <%= f.input :identifier_source_name, :as => :pbcore_combobox,
                                       :input_html => { :class => "pbcore-autocomplete", 
                                                        "data-autocomplete-source" => identifier_sources_path },
                                       :wrapper_html => { :class => "col-2" },
                                       :label => "Source",
                                       :required => false %>
  <%= link_to_remove_fields "remove", f %>
  <%= f.input :ref, :as => :string, :required => false %>
<% end %>