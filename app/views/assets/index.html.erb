<%= render :partial => 'search_form' %>

<ul>
  <%- @assets.each do |asset| -%>
    <li>
      <%= h asset.titles.map{|t| t.title}.join(", ") %>
      <%= link_to "view", asset %>
      <%= link_to "xml", formatted_asset_url(asset, "xml") %>
    </li>
  <%- end -%>
</ul>

<%= will_paginate @assets %>

<p><%= link_to "upload assets", :controller => :xml %></p>