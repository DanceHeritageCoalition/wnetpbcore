  -%>
  <dt><%= h field %></dt>
  <%-
end
objs.each do |obj|
  if local_assigns[:key]
    objkey = obj.send(key)
    objkey = objkey.name if objkey.respond_to?(:name)
    keystr = "#{field} (#{objkey})"
    -%>
    <dt><%= h keystr %></dt>
    <%-
  end
-%>
