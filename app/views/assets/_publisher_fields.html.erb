<% f.inputs do %>
  <%= f.input :publisher_role_name, :as => :pbcore_combobox,
                                  :input_html => { :class => "pbcore-autocomplete", 
                                                   "data-autocomplete-source" => publisher_roles_path },
                                  :wrapper_html => { :class => "col-1" },
                                  :label => "Role",
                                  :required => false %>
  <%= f.input :publisher, :as => :string, :label => "Name", :required => false, :wrapper_html => { :class => "col-2" } %>
  <%= link_to_remove_fields "remove", f %>
  <%= f.input :source, :as => :string, :required => false, :wrapper_html => { :class => "col-1" } %>
  <%= f.input :ref, :as => :string, :required => false, :wrapper_html => { :class => "col-2" } %>
  <%= f.input :affiliation, :as => :string,
                            :required => false %>
<% end %>