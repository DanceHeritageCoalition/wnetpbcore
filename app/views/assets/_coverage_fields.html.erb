<% f.inputs do %>
  <%= f.input :coverage_type, :as => :radio, :collection => ["Spatial", "Temporal"], :label => "Type", :required => false %>
  <%= f.input :coverage, :as => :string, :required => false %>
  <%= f.input :source, :as => :string, :required => false %>
  <%= f.input :ref, :as => :string, :required => false %>
  <%= link_to_remove_fields "remove", f %>
<% end %>